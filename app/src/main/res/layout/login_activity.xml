<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo arriba -->
        <ImageView
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:src="@drawable/abg"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor para centrar verticalmente la tarjeta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Tarjeta del formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bordeedittext"
                android:elevation="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="SIGN IN"
                    android:textColor="#c1a35f"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Iconos decorativos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="25dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="#c1a35f"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bordeedittext"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_marginStart="10dp"
                        app:tint="#c1a35f"/>

                    <EditText
                        android:id="@+id/editTextUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:padding="14dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bordeedittext"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:layout_marginStart="10dp"
                        app:tint="#c1a35f"/>

                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BDBDBD" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#977722"
                    android:padding="12dp"
                    android:text="LOG IN"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <!-- LÃ­nea decorativa con texto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:background="#444444"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AITOR BAUZA PROJECT"
                        android:textColor="#777777"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:background="#444444"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Texto de registro centrado -->
        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Don't have an account? REGISTER NOW"
            android:textColor="#c1a35f"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>